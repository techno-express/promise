{
    "name": "react/promise",
    "description": "A lightweight implementation of CommonJS Promises/A for PHP",
    "license": "MIT",
    "authors": [
        {"name": "Jan Sorgalla", "email": "jsorgalla@gmail.com"}
    ],
    "require": {
        "php": ">=5.4.0",
        "react/event-loop": "1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8.35 || ~5.7 || ~6.4"
    },
    "autoload": {
        "psr-4": {
            "React\\Promise\\": "src/"
        },
        "files": ["src/functions_include.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "React\\Promise\\": [
                "tests/fixtures/",
                "tests/"
            ]
        }
    },
    "keywords": [
        "promise",
        "promises"
    ]
}
